<%= render 'shared/form_error', form: @user %>
<div class="row">
  <div class="well span6">
    <%= form_for @user do |f| %>
      <div class="control-group">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>

      <div class="control-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>

      <div class="control-group">
        <%= f.label :timezone %>
        <%= f.time_zone_select :timezone, ActiveSupport::TimeZone.us_zones, default: Time.zone.name %>
      </div>
      <%= f.submit (@user.new_record? ? "Register" : "Update"), class: "btn btn-success" %>
    <% end %>
  </div>
</div>